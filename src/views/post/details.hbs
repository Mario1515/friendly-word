<main class="details">
    <!-- Details page -->
    <section id="details">
        <div id="details-wrapper">
            <p id="details-title">Name: {{animal.name}}</p>
            <div id="img-wrapper">
                <img src="{{animal.image}}" />
            </div>
            <div id="info-wrapper">
                <table>
                    <tr>
                        <td>
                            <p>
                                Years: <span id="details-years">{{animal.years}}</span>
                            </p>
                        </td>
                        <td>
                            <p>Kind: <span id="details-kind">{{animal.kind}}</span></p>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <p>Need of: <span id="details-need">{{animal.need}}</span></p>
                        </td>
                        <td>
                            <p>Location: <span id="details-location">{{animal.location}}</span></p>
                        </td>
                    </tr>
                </table>
                <p>Description: <span id="details-description">{{animal.description}}</span></p>
                {{#if isAuthenticated}}
            </div>
            <!--Edit and Delete are only for creator-->
            
            <div id="action-buttons">
                {{#if isOwner}}
                <a href="/posts/{{animal._id}}/edit" id="edit-btn">Edit</a>
                <a href="/posts/{{animal._id}}/delete" id="delete-btn">Delete</a>
                <!--Donations are for not the creator-->
                {{else}}
                {{#unless hasDonated}}
                <a href="/posts/{{animal._id}}/donation" id="donation-btn" >Donation</a>
                {{else}}
                <p id="already-donated">You have already donated. Thanks!</p>
                {{/unless}}
                 {{/if}}
            </div>
        </div>
            {{/if}}
    </section>
</main>